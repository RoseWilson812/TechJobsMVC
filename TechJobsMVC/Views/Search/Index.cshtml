<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in @ViewBag.columns)
            {
                @if (column.Key == "all" && @ViewBag.searchType == null)
                {
                    <span>
                        <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked="@column.Key == 'all'" />
                        <label for="@column.Key">@column.Value</label>
                    </span>
                }
                else if (column.Key == @ViewBag.searchType)
                {
                    <span>
                        <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked="@column.Key == @ViewBag.searchType" />
                        <label for="@column.Key">@column.Value</label>
                    </span>
                }
                else
                {
                    <span>
                        <input type="radio" name="searchType" id="@column.Key" value="@column.Key" />
                        <label for="@column.Key">@column.Value</label>
                    </span>
                }
            }

        </p>
        
        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" value="@ViewBag.searchTerm" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />

    @*{
            //TODO #4: Loop over the search results to display all job fields.
        }*@
    @if (@ViewBag.jobs.Count > 0)
    {
    <table class="job-listing">
        @foreach (var job in @ViewBag.jobs)
        {
            <tr>
                <td>
                    <ul>
                        <li>Id:  @job.Id </li>
                        <li>Name: @job.Name </li>
                        <li>Employer: @job.Employer.Value </li>
                        <li>Location: @job.Location.Value </li>
                        <li>Position Type: @job.PositionType.Value </li>
                        <li>Skill: @job.CoreCompetency.Value </li>
                    </ul>
                </td>
            </tr>
        }
    </table>
    }
</div>